{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run build.sh",
            "type": "cppdbg",
            "request": "launch",
            "program": "/bin/bash",
            "args": ["-c", "${workspaceFolder}/build.sh"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}